{
    "name": "jdl",
    "displayName": "jdl",
    "description": "JDL VS Code extension",
    "version": "1.1.0",
    "publisher": "jhipster",
    "engines": {
        "vscode": "^1.4.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onLanguage:jdl",
        "onCommand:plantuml.preview"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "jdl",
                "aliases": [
                    "jdl"
                ],
                "extensions": [
                    ".jdl",
                    "jh"
                ],
                "configuration": "./jdl.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "jdl",
                "scopeName": "text.jdl",
                "path": "./jdl.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "plantuml.preview",
                "title": "Preview Plant UML from active editor"
            }
        ],    
        "keybindings": [
            {
                "command": "plantuml.preview",
                "key": "alt+d" 
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.1.6",
        "vscode": "^0.11.0"
    },
    "dependencies": {
        "global": "^4.3.1",
        "vscode-languageclient": "^2.6.3"
    }
}
